@model List<Repository.ViewModels.StoreViewModel>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<div class="container mt-5">
    <div class="card p-4 shadow-lg bg-white">
        <h4 class="fw-bold text-start mb-4">Store List</h4>

        <table class="table table-striped table-bordered text-center bg-white">
            <thead class="table-light">
                <tr>
                    <th>STT</th>
                    <th>Store Name</th>
                    <th>Username</th>
                    <th>Image</th>
                    <th>Address</th>
                    <th>Phone</th>
                    <th>Created Date</th>
                    <th>Modified Date</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    var store = Model[i];
                    <tr id="storeRow-@store.ID">
                        <td>@(i + 1)</td>
                        <td>@store.Name</td>
                        <td>@store.UserName</td>
                        <td>
                            @if (!string.IsNullOrEmpty(store.Img))
                            {
                                <img src="@store.Img" alt="Store Image" class="rounded border"
                                     style="width: 120px; height: 120px; object-fit: cover; border: 2px solid #ddd;">
                            }
                            else
                            {
                                <span class="text-muted">No Image</span>
                            }
                        </td>
                        <td>@store.Address</td>
                        <td>@store.Phone</td>
                        <td>@store.CreatedDate.ToString("dd/MM/yyyy")</td>
                        <td>@(store.ModifiedDate?.ToString("dd/MM/yyyy") ?? "N/A")</td>
                        <td>
                            @if (store.IsActive)
                            {
                                <span class="badge bg-success-subtle text-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-danger-subtle text-danger">Disabled</span>
                            }
                        </td>
                        <td>
                            @if (store.IsActive)
                            {
                                <form id="hideStoreForm-@store.ID" method="post" asp-action="Hidden" asp-controller="AdminStore">
                                    <input type="hidden" name="id" value="@store.ID" />
                                    <button type="button" class="btn btn-danger btn-sm" onclick="confirmAction('@store.ID', 'hide')">Hidden</button>
                                </form>
                            }
                            else
                            {
                                <form id="showStoreForm-@store.ID" method="post" asp-action="Show" asp-controller="AdminStore">
                                    <input type="hidden" name="id" value="@store.ID" />
                                    <button type="button" class="btn btn-success btn-sm" onclick="confirmAction('@store.ID', 'show')">Show</button>
                                </form>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script>
    function confirmAction(storeId, action) {
        let title = action === "hide" ? "Are you sure you want to hide this store?" : "Are you sure you want to show this store?";
        let confirmButtonText = action === "hide" ? "Yes, hide it!" : "Yes, show it!";
        let formId = action === "hide" ? "hideStoreForm-" + storeId : "showStoreForm-" + storeId;

        Swal.fire({
            title: title,
            text: "This action can be reverted later.",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: action === "hide" ? "#d33" : "#28a745",
            cancelButtonColor: "#3085d6",
            confirmButtonText: confirmButtonText
        }).then((result) => {
            if (result.isConfirmed) {
                document.getElementById(formId).submit();
            }
        });
    }

    document.addEventListener("DOMContentLoaded", function () {
        var successMessage = "@TempData["success"]";
        var failMessage = "@TempData["fail"]";

        if (successMessage) {
            Swal.fire({
                icon: "success",
                title: "Success!",
                text: successMessage,
                timer: 2000,
                showConfirmButton: false
            });
        }

        if (failMessage) {
            Swal.fire({
                icon: "error",
                title: "Error!",
                text: failMessage,
                timer: 2000,
                showConfirmButton: false
            });
        }
    });
</script>
